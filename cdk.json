{
    "app": "python app.py",
    "watch": {
        "include": [
            "**"
        ],
        "exclude": [
            "README.md",
            "cdk*.json",
            "requirements*.txt",
            "source.bat",
            "**/__pycache__",
            "**/*.pyc"
        ]
    },
    "context": {
        "aws-cdk:enableDiffNoFail": "true",
        "@aws-cdk/aws-lambda:recognizeLayerVersion": true,
        "@aws-cdk/core:checkSecretUsage": true,
        "@aws-cdk/core:target-partitions": ["aws", "aws-cn"]
    }
}